# Application Configuration
APP_NAME=LUNG_Oraculum
APP_ENV=development
APP_PORT=8080
APP_DEBUG=true

# API Configuration
API_VERSION=v1
API_BASE_PATH=/api/v1
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=168h

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lung_oraculum
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=lung-oraculum-api
KAFKA_CONSUMER_GROUP=lung-oraculum-consumers
KAFKA_TOPIC_PREDICTION_SUBMITTED=prediction.submitted
KAFKA_TOPIC_PREDICTION_CONFIRMED=prediction.confirmed
KAFKA_TOPIC_EVENT_CREATED=event.created
KAFKA_TOPIC_EVENT_RESOLVED=event.resolved
KAFKA_TOPIC_USER_ACTIVITY=user.activity

# Solana Configuration
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_WS_URL=wss://api.devnet.solana.com
SOLANA_PROGRAM_ID=YourProgramIDHere
SOLANA_ADMIN_PRIVATE_KEY=your-base58-encoded-private-key

# WebSocket Configuration
WS_ENABLED=true
WS_PATH=/ws
WS_READ_BUFFER_SIZE=1024
WS_WRITE_BUFFER_SIZE=1024

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_PREDICTION_PER_HOUR=50
RATE_LIMIT_PREDICTION_PER_DAY=200

# Security Configuration
BCRYPT_COST=10
SESSION_TIMEOUT=24h
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=30m

# Anti-Fraud Configuration
PREDICTION_MIN_TIME_BEFORE_EVENT=5m
PREDICTION_MAX_TIME_BEFORE_EVENT=720h
MIN_PREDICTION_AMOUNT=0.01
MAX_PREDICTION_AMOUNT=100
MAX_DAILY_VOLUME=1000
ENABLE_DEVICE_FINGERPRINTING=true
ENABLE_MULTI_ACCOUNT_DETECTION=true

# Web Crawler Configuration
CRAWLER_ENABLED=false
CRAWLER_INTERVAL=1h
CRAWLER_USER_AGENT=LUNG_Oraculum_Bot/1.0
CRAWLER_TIMEOUT=30s
CRAWLER_MAX_RETRIES=3

# External API Keys (for crawler)
NEWS_API_KEY=
ODDS_API_KEY=
COINGECKO_API_KEY=
WEATHER_API_KEY=

# Email Configuration (Future)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=noreply@lungoraculum.com

# Monitoring & Logging
LOG_LEVEL=debug
LOG_FORMAT=json
METRICS_ENABLED=true
METRICS_PORT=9090
TRACING_ENABLED=false
SENTRY_DSN=

# File Storage (Future - S3/MinIO)
STORAGE_TYPE=local
STORAGE_PATH=./uploads
S3_BUCKET=
S3_REGION=
S3_ACCESS_KEY=
S3_SECRET_KEY=

# MongoDB (Future - for per-user event history)
MONGO_URI=mongodb://localhost:27017
MONGO_DATABASE=lung_oraculum_history

# Feature Flags
FEATURE_SOCIAL_ENABLED=false
FEATURE_LEADERBOARD_ENABLED=true
FEATURE_REFERRAL_ENABLED=false
FEATURE_NFT_REWARDS_ENABLED=false

# Admin Configuration
ADMIN_EMAIL=admin@lungoraculum.com
ADMIN_WALLET_ADDRESS=

# Production Settings (uncomment for production)
# APP_ENV=production
# APP_DEBUG=false
# DB_SSL_MODE=require
# RATE_LIMIT_REQUESTS_PER_HOUR=500
# LOG_LEVEL=info
